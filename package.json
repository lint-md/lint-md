  ],
  "license": "MIT",
  "devDependencies": {
    "@lint-md/core": "0.2.2",
    "@microsoft/api-extractor": "^7.22.0",
    "@types/benchmark": "^2.1.1",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.3"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./ --fix",
    "test": "jest --no-cache",
    "build-all": "pnpm -r build",
    "clean-all": "lerna clean"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.ts$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
