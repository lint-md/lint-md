{
  "name": "@lint-md/core",
  "version": "2.0.0-beta.4",
  "description": "Core of lint-md which used to lint your markdown file for Chinese.",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "contributors": [
    "hustcc <i@hust.cc>",
    "yuzhanglong <loveyzl1123@gmail.com>"
  ],
  "scripts": {
    "test": "jest --no-cache",
    "lib:cjs": "tsc -p tsconfig.json --target ESNext --module commonjs --outDir lib",
    "lib:esm": "tsc -p tsconfig.json --target ESNext --module ESNext --outDir esm",
    "build": "run-p lib:*",
    "clean": "rimraf lib esm"
  },
  "files": [
    "esm",
    "lib",
    "src"
  ],
  "keywords": [
    "lint",
    "markdown",
    "lint-md",
    "chinese"
  ],
  "dependencies": {
    "@lint-md/parser": "^0.0.11",
    "lodash": "^4.17.21",
    "remark-parse": "^9",
    "unified": "^9"
  },
  "devDependencies": {
    "@lint-md/core": "0.2.1",
    "@types/benchmark": "^2.1.1",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.ts$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "author": "hustcc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lint-md/lint-md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lint-md.git"
  },
  "homepage": "https://github.com/lint-md#readme"
}
